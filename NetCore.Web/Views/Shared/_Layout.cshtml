<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NetCore.Web</title>

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav>
        <div style="display: flex;">
            <div><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></div>
            <div><a asp-area="" asp-controller="Home" asp-action="About">About</a></div>
            <div><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></div>
        </div>
    </nav>

    <div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - NetCore.Web</p>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
